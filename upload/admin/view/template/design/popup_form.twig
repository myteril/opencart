{{ header }}{{ column_left }}
<div id="content">
  <div class="page-header">
    <div class="container-fluid">
      <div class="float-end">
        <button type="submit" form="form-popup" data-bs-toggle="tooltip" title="{{ button_save }}" class="btn btn-primary"><i class="fa-solid fa-floppy-disk"></i></button>
        <a href="{{ back }}" data-bs-toggle="tooltip" title="{{ button_back }}" class="btn btn-light"><i class="fa-solid fa-reply"></i></a></div>
      <h1>{{ heading_title }}</h1>
      {{ breadcrumbs }}
    </div>
  </div>
  <div class="container-fluid">
    <div class="card">
      <div class="card-header"><i class="fa-solid fa-pencil"></i> {{ text_form }}</div>
      <div class="card-body">
        <form id="form-popup" action="{{ save }}" method="post" data-oc-toggle="ajax">
          <div class="row mb-3">
            <label class="col-sm-2 col-form-label">{{ entry_store }}</label>
            <div class="col-sm-10">
              <select name="store_id" class="form-control">
                <option value="0"{% if not store_id %} selected{% endif %}>{{ text_default }}</option>
                {% for store in stores %}
                  <option value="{{ store.store_id }}"{% if store_id == store.store_id %} selected{% endif %}>{{ store.name }}</option>
                {% endfor %}
              </select>
            </div>
          </div>
          <div class="row mb-3 required">
            <label for="input-title" class="col-sm-2 col-form-label">{{ entry_title }}</label>
            <div class="col-sm-10">
              <input type="text" name="title" value="{{ title }}" placeholder="{{ entry_title }}" id="input-title" class="form-control"/>
              <div id="error-title" class="invalid-feedback"></div>
            </div>
          </div>
          <div class="row mb-3">
            <label class="col-sm-2 col-form-label">{{ entry_status }}</label>
            <div class="col-sm-10">
              <div class="form-check form-switch form-switch-lg">
                <input type="hidden" name="status" value="0"/>
                <input type="checkbox" name="status" value="1" id="input-status" class="form-check-input"{% if status %} checked{% endif %}/>
              </div>
            </div>
          </div>
          <div class="row mb-3">
            <label class="col-sm-2 col-form-label">{{ entry_delay }}</label>
            <div class="col-sm-10">
              <input type="text" name="initial_delay" value="{{ initial_delay }}" placeholder="{{ placeholder_delay }}" id="input-delay" class="form-control"/>
              <div id="error-delay" class="invalid-feedback"></div>
            </div>
          </div>
          <div class="row mb-3">
            <label class="col-sm-2 col-form-label">{{ entry_time_to_close }}</label>
            <div class="col-sm-10">
              <input type="text" name="time_to_close" value="{{ time_to_close }}" placeholder="{{ placeholder_time_to_close }}" id="input-time-to-close" class="form-control"/>
              <div id="error-time-to-close" class="invalid-feedback"></div>
            </div>
          </div>
          <div class="row mb-3">
            <label class="col-sm-2 col-form-label">{{ entry_width }}</label>
            <div class="col-sm-10">
              <input type="text" name="width" value="{{ width }}" placeholder="{{ placeholder_width }}" id="input-width" class="form-control"/>
              <div id="error-width" class="invalid-feedback"></div>
            </div>
          </div>
          <div class="row mb-3">
            <label class="col-sm-2 col-form-label">{{ entry_behaviour }}</label>
            <div class="col-sm-10">
              <select name="show_everytime" class="form-control">
                <option value="1"{% if show_everytime %} selected{% endif %}>{{ entry_show_everytime }}</option>
                <option value="0"{% if not show_everytime %} selected{% endif %}>{{ entry_show_once }}</option>
              </select>
            </div>
          </div>
          <br/>
          <ul class="nav nav-tabs">
            {% for language in languages %}
              <li class="nav-item"><a href="#language-{{ language.language_id }}" data-bs-toggle="tab" class="nav-link{% if loop.first %} active{% endif %}"><img src="{{ language.image }}" title="{{ language.name }}"/> {{ language.name }}</a></li>
            {% endfor %}
          </ul>
          <div class="tab-content">
            {% for language in languages %}
              <div id="language-{{ language.language_id }}" class="tab-pane{% if loop.first %} active{% endif %}">
                <div class="row mb-3">
                  <label class="col-sm-2 col-form-label">{{ entry_header }}</label>
                  <div class="col-sm-10">
                    <input type="text" name="popup_content[{{ language.language_id }}][header]" value="{{ popup_contents[language.language_id] ? popup_contents[language.language_id].header }}" placeholder="{{ entry_header }}" id="input-header" class="form-control"/>
                  </div>
                </div>
                <div class="row mb-3">
                  <label class="col-sm-2 col-form-label">{{ entry_content }}</label>
                  <div class="col-sm-10">
                    <div class="input-group">
                      <div class="form-control h-100 p-0 border-0 rounded-0">
                        <textarea name="popup_content[{{ language.language_id }}][content]" placeholder="{{ entry_content }}" id="input-content-{{ language.language_id }}" data-oc-toggle="ckeditor" data-lang="{{ ckeditor }}" class="w-100 position-relative">{{ popup_contents[language.language_id] ? popup_contents[language.language_id].content }}</textarea>
                      </div>
                    </div>
                  </div>
                </div>
              </div>
            {% endfor %}
          </div>
          <input type="hidden" name="popup_id" value="{{ popup_id }}" id="input-popup-id"/>
        </form>
      </div>
    </div>
  </div>
</div>

<script type="text/javascript">
$('textarea[data-oc-toggle=\'ckeditor\']').ckeditor({
  language: '{{ ckeditor }}'
});
</script>

{{ footer }}
